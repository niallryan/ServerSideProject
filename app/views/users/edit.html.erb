<h1>Edit Your Details</h1>

<% form_for(@user) do |f| %>
    <p>
      <%= f.label :forename %>:
      <%= f.text_field :forename %>
    </p>
    <p>
      <%= f.label :surname %>:
      <%= f.text_field :surname %>
    </p>
    <p>
      <%= f.label :email, "E-Mail" %>:
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :location %>:
      <%= f.text_field :location %>
    </p>
    <p>
      <%= f.submit "Update" %>
    </p>
<% end %>

